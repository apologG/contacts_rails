<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <%= image_tag contact.avatar.url(:thumb), class: 'media-object' %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"></h4>
        <address>
          <strong><%= contact.name %></strong><br>
          <%= contact.email %>
        </address>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), class: 'btn btn-circle btn-default btn-xs', title: "Править" do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      <%= link_to contact_path(contact),
                  class: 'btn btn-circle btn-danger btn-xs',
                  method: :delete,
                  data: { confirm: t('contacts.contact.destroy_confirm') },
                  title: "Удалить" do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    </div>
  </td>
</tr>